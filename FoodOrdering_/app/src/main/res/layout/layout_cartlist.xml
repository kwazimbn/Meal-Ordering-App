<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/cparent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">


    <TextView
        android:id="@+id/cmenuDescription"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:fontFamily="sans-serif"
        android:text="Chicken Strips"
        android:textAlignment="gravity"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/citem_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/cmenuDescription"
        android:layout_marginEnd="13dp"
        android:fontFamily="sans-serif"
        android:paddingBottom="10dp"
        android:text="R24,00"
        android:textColor="@color/red"
        android:textSize="16sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignBottom="@+id/citem_price"
        android:layout_alignParentStart="true"
        android:background="@color/light_grey"
        android:paddingTop="15dp"
        android:textSize="5sp" />

    <TextView
        android:id="@+id/ctxtquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cmenuDescription"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif"
        android:text="1"
        android:textSize="16sp" />

    <Button
        android:id="@+id/cbtn_deleteItem"
        android:layout_width="31dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"

        android:layout_marginEnd="27dp"
        android:background="@drawable/ic_delete_black_24dp" />


</RelativeLayout>