<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/OLparent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="DATE"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/OLmenuDescription"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif"
        android:text="Chicken Strips"
        android:textAlignment="gravity"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/OLitem_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/OLmenuDescription"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif"
        android:paddingBottom="10dp"
        android:text="R24,00"
        android:textColor="@color/red"
        android:textSize="16sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="157dp"
        android:background="@color/light_grey"
        android:paddingTop="15dp"
        android:textSize="5sp" />

    <TextView
        android:id="@+id/OLtxtquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/OLmenuDescription"
        android:layout_marginStart="30dp"
        android:fontFamily="sans-serif"
        android:text="1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/OLitem_price"
        android:layout_marginTop="108dp"
        android:fontFamily="sans-serif"
        android:paddingBottom="10dp"
        android:text="R24,00"
        android:textColor="@color/red" />


</RelativeLayout>